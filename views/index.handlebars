<div class="jumbotron jumbotron-fluid">
  <div class="container">
    
    <h1 class="display-4 text-center">
      <img src="/assets/img/burger.png"></br>
      Eat-Da-Burger!</h1>
  </div>
</div>


<div class="container">

  <div class="row">
    <div class="col-sm">
      <h2>Eat a burger!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm">
      <h2>Burgers you ate!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>
</div>


<div class="container text-center">
  <div class="row">
    <div class="col-sm">

        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <p>Enter a burger you want to eat and click the "Submit" button.</p>
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="submit">Submit</button>
        </form>
      
    </div>
  </div>
</div>








